{
  "name": "maatify/psr-logger",
  "description": "PSR-3 compatible logger with dynamic file naming and hourly rotation, powered by Monolog",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "maatify",
    "logger",
    "psr-3",
    "monolog",
    "php",
    "logging",
    "hourly-rotation",
    "maatify.dev"
  ],
  "authors": [
    {
      "name": "Maatify.dev",
      "email": "support@maatify.dev"
    }
  ],
  "homepage": "https://github.com/Maatify/psr-logger",
  "support": {
    "issues": "https://github.com/Maatify/psr-logger/issues",
    "source": "https://github.com/Maatify/psr-logger"
  },
  "autoload": {
    "psr-4": {
      "Maatify\\PsrLogger\\": "src/"
    }
  },
  "require": {
    "php": "^8.4",
    "psr/log": "^3.0",
    "monolog/monolog": "^3.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml --testdox",
    "lint": "php-cs-fixer fix --dry-run --diff",
    "logs:clean": "php scripts/clean_logs.php",
    "check": [
      "@lint",
      "@test"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Maatify\\PsrLogger\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
